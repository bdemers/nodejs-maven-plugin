    <id>macos-x86</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <files>
        <file>
            <source>
                ${basedir}/nodejs-distributions/macos-x86/node
